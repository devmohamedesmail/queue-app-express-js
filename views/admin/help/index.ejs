<div class="p-4">
    <h4 class="mb-2 text-xl font-bold text-primary">
        <%= __('help-page') %>
    </h4>
    <hr class="mb-3">
    <% helps.forEach(help=> { %>


        <div class="flex items-center justify-between px-3 py-3 my-4 bg-gray-200">

            <div>
                <p class="text-primary ">
                    <%= help.topic %>
                </p>
                <p>
                    <%= help.message %>
                </p>
            </div>
            <div>
                <!-- You can open the modal using ID.showModal() method -->
                <button class=" btn btn-primary" onclick="document.getElementById('modal-<%= help._id %>').showModal()">
                    <%= __('reply') %>
                </button>
                <dialog id="modal-<%= help._id %>" class="modal">
                    <div class="modal-box">
                        <form method="dialog">
                            <button class="absolute btn btn-sm btn-circle btn-ghost right-2 top-2">âœ•</button>
                        </form>
                       <div class="my-5">
                        <form action="/admin/reply/help/<%= help._id %>" method="post">
                            <textarea type="text" name="reply" placeholder="<%= __('message')  %>" class="w-full my-5 textarea textarea-primary focus:outline-0"></textarea>
                            
                            <div class="flex items-baseline justify-center">
                                <button class="btn btn-primary"><%= __('send')  %></button>
                            </div>
                        </form>
                       </div>
                    </div>
                </dialog>
            </div>

        </div>




        <% }) %>
</div>