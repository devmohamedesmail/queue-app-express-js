<div class="p-4">
  <form action="/places/add/new/place" method="post" enctype="multipart/form-data">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">

      <div class="mb-3 ">
        <label class="label block text-black text-sm">Name ( Ar )</label>
        <input type="text" name="nameAr" required class="input input-primary w-full" />
      </div>

      <div class="mb-3 ">
        <label class="label block text-black text-sm">Name ( En )</label>
        <input type="text" name="nameEn" required class="input input-primary w-full" />
      </div>


      <div class="mb-3 ">
        <label class="label block text-black text-sm">Address ( En )</label>
        <input type="text" name="addressEn" required class="input input-primary w-full" />
      </div>


      <div class="mb-3 ">
        <label class="label block text-black text-sm">Address ( Ar )</label>
        <input type="text" name="addressAr" required class="input input-primary w-full" />
      </div>




      <div class="mb-3 ">
        <label class="label block text-black text-sm">Description</label>
        <input type="text" name="description" required class="input input-primary w-full" />
      </div>


      <div class="mb-3 ">
        <label class="label block text-black text-sm">Latitude</label>
        <input type="text" name="lat" required class="input input-primary w-full" />
      </div>


      <div class="mb-3 ">
        <label class="label block text-black text-sm">Longitude</label>
        <input type="text" name="lng" required class="input input-primary w-full" />
      </div>

      <div class="mb-3 ">
        <label class="label block text-black text-sm">Start Work</label>
        <input type="time" name="timeStart" required class="input input-primary w-full" />
      </div>

      <div class="mb-3 ">
        <label class="label block text-black text-sm">Start Work</label>
        <input type="time" name="timeClosed" required class="input input-primary w-full" />
      </div>



      <div class="mb-3">
        <label class="label block text-black text-sm">Days of Work</label>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Sunday" class="checkbox" />
            Sunday
          </label>

          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Monday" class="checkbox" />
            Monday
          </label>

          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Tuesday" class="checkbox" />
            Tuesday
          </label>

          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Wednesday" class="checkbox" />
            Wednesday
          </label>


          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Thursday" class="checkbox" />
            Thursday
          </label>


          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Friday" class="checkbox" />
            Friday
          </label>

          <label class="fieldset-label">
            <input type="checkbox"  name="daysOfWork[]" value="Saturday" class="checkbox" />
            Saturday
          </label>


          
        </div>
    </div>


      <div class="mb-3">
        <label
          class="image-preview border-dashed border border-gray-400 p-4 flex justify-center flex-col items-center w-full "
          for="image">

          <div class="mb-2">
            <img src="" id="preview" alt="">
          </div>
          <input type="file" id="image" name="image" required class="file-input file-input-primary w-full hidden" />

          <div>
            <i class="fa-solid fa-file-image fs-3"></i>
          </div>
        </label>

      </div>




      <div class="my-10 col-span-2 flex justify-center items-center">
        <button type="submit" class="btn btn-primary  ">Save</button>
      </div>


    </div>
  </form>




  <!--  all places  -->

  <div class="table-responsive overflow-x-auto bg-white">
    <table id="myTable" class="table table-striped table-xs">
      <thead>
        <tr>

          <th class="text-black">Name (En)</th>
          <th class="text-black">Name (Ar)</th>
          <th class="text-black">Address (En)</th>
          <th class="text-black">Address (Ar)</th>
          <th class="text-black">Description</th>
          <th class="text-black">location</th>
          <th class="text-black">Image</th>
          <th class="text-black">Actions</th>

        </tr>
      </thead>
      <tbody>
        <% places.forEach(place=> { %>
          <tr>
            <td class="text-xs font-light">
              <%= place.nameEn %>
            </td>

            <td class="text-xs font-light">
              <%= place.nameAr %>
            </td>

            <td class="text-xs font-light">
              <%= place.addressEn %>
            </td>


            <td class="text-xs font-light">
              <%= place.addressAr %>
            </td>


            <td class="text-xs font-light">
              <%= place.description %>
            </td>

            <td>
              <%= place.location.lat %> - <%= place.location.lng %>
            </td>

            <td>
              <img width="50px" src="/uploads/<%= place.image  %>" alt="">
            </td>

            <td class="d-flex">

              <a href="/places/edit/place/<%= place._id %> " class="btn btn-success btn-sm s m-1">
                <i class="fa-solid fa-pen text-white"></i>
              </a>


              <a onclick="return confirm('Are you sure you want to delete this item?');"
                href="/places/delete/place/<%= place._id %> " class="btn btn-error btn-sm m-1">
                <i class="fa-solid fa-trash text-white"></i>
              </a>

            </td>



          </tr>
          <% }) %>


      </tbody>

    </table>
  </div>
</div>