<div class="container flex items-center justify-center w-screen h-screen m-auto dark:bg-gray-900">
   
    <div class="grid gap-8">
        <div id="back-div" class="bg-gradient-to-r from-green-500 to-green-700 rounded-[26px] m-4">
            <div
                class="border-[20px] border-transparent rounded-[20px] dark:bg-gray-900 bg-white shadow-lg xl:p-10 2xl:p-10 lg:p-10 md:p-10 sm:p-2 m-2">
                <h1 class="pt-8 pb-6 text-5xl font-bold text-center cursor-default dark:text-gray-400">
                    <%= __('register') %>
                </h1>
                <form action="/users/register" method="post" class="space-y-4">
                    
                    
                    <div>
                        <label for="email" ><%= __('name') %></label>
                        <input id="email"
                            class="w-full p-3 duration-300 ease-in-out border border-gray-300 rounded-lg shadow-md dark:bg-indigo-700 dark:text-gray-300 dark:border-gray-700 placeholder:text-base focus:scale-105"
                            type="name" placeholder="Name"  name="name" />
                    </div>
                    
                    
                    
                    <div>
                        <label for="email" ><%= __('email') %></label>
                        <input id="email"
                            class="w-full p-3 duration-300 ease-in-out border border-gray-300 rounded-lg shadow-md dark:bg-indigo-700 dark:text-gray-300 dark:border-gray-700 placeholder:text-base focus:scale-105"
                            type="email" placeholder=<%= __('email') %>  name="email" />
                    </div>
                    <div>
                        <label for="password" ><%= __('password') %></label>
                        <input id="password"
                            class="w-full p-3 duration-300 ease-in-out border border-gray-300 rounded-lg shadow-md dark:bg-indigo-700 dark:text-gray-300 dark:border-gray-700 placeholder:text-base focus:scale-105"
                            type="password" placeholder=<%= __('password') %>  name="password" />
                    </div>
                    
                    <button
                        class="w-full p-2 mt-6 text-white transition duration-300 ease-in-out rounded-lg shadow-lg bg-gradient-to-r dark:text-gray-300 from-green-500 to-green-800 hover:scale-105 "
                        type="submit">
                        <%= __('register') %>
                    </button>
                </form>
                <div class="flex flex-col items-center justify-center mt-4 text-sm">
                    <h3 class="dark:text-gray-300">
                        <%= __('have-account') %>
                        <a class="text-blue-400 transition-all duration-100 ease-in-out group" href="/front/login/page">
                            <span
                                class="bg-left-bottom bg-gradient-to-r from-green-500 to-green-800  bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out">
                                <%= __('login') %>
                            </span>
                        </a>
                    </h3>
                </div>
          
               

               
            </div>
        </div>
    </div>
</div>